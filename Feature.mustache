<a data-schema="uischema.org/Feature" class="ui-feature" id="ui-{{ @id }}" href="{{ link.href }}" target="{{ link.target }}">
    <div class="ui-feature-image">
        {{# image }}
            {{> Image }}
        {{/ image }}
    </div>

    <div class="ui-feature-details">
        {{# heading }}
            <div class="ui-feature-heading">{{ . }}<div>
        {{/ heading }}
        
        {{# subheading }}
            <div class="ui-feature-subheading">{{ . }}</div>
        {{/ subheading }}}
        
        {{# body }}
            <div class="ui-feature-body">{{ . }}</div>
        {{/ endif }}
    </details>
</a>
