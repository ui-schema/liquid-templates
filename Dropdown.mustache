<div data-schema="uischema.org/Dropdown" class="ui-dropdown" id="ui-{{ @id }}">
    <label for="ui-{{ @id }}-trigger" class="ui-dropdown-text">{{ text }}</label>
    <input id="ui-{{ @id }}-trigger" type="checkbox" class="ui-dropdown-trigger">
    <div class="ui-dropdown-menu">
        {{ #isSearchable }}
            <input type="search" class="ui-dropdown-search">
        {{ /isSearchable }}
        <ul class="ui-dropdown-options">
            {{ #options }}
                <li class="ui-dropdown-option">
                    <a href="#{{ value }}">{{ name }}</a>
                </li>
            {{ /options }}
        </ul>
    </div>
</div>
