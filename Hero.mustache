<section data-ui-schema="uischema.org/Hero" class="ui-hero">
    {{# image }}
        <div class="ui-hero-image">{{> Image }}</div>
    {{/ image }}

    <div class="ui-container">
        {{# heading }}
            <h2 class="ui-hero-heading">{{ . }}</h2>
        {{/ heading }}
        
        {{# subheading }}
            <h3 class="ui-hero-subheading">{{ . }}</h3>
        {{/ subheading }}

        <div class="ui-hero-details">
            {{# body }}
                <div class="ui-hero-body">{{{ . }}}</div>
            {{/ body }}

            {{# link }}
                <div class="ui-hero-link">{{> Link }}</div>
            {{/ link }}
        </div>
    </div>
</section>
