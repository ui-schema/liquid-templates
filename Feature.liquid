<a
    data-schema="http://uischema.org/Feature"
    href="{{link.href}}"    
    target="{{link.target}}"    
>
    {% if image %}
        {% include Image.liquid with image %}
    {% endif %}
    {% if heading %}
        <h3>{{ heading }}</h3>
    {% endif %}
    {% if subheading %}
        <h4>{{ subheading }}</h4>
    {% endif %}
    {% if body %}
        <p>{{ body }}</p>
    {% endif %}
</a>
